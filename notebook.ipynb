    "def combination(n, r):\n",
    "    r = max(r, n-r)\n",
    "    \n",
    "    result = 1\n",
    "    for i, j in enumerate(range(n, r, -1)):\n",
    "        result *= j / (i+1)\n",
    "    \n",
    "    return int(result)"
   ]
